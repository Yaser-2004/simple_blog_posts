<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
   <header class="navbar">
        <div>BLOG</div>
        <div>
            <li>About Us</li>
            <li>Services</li>
            <li>Blogs</li>
        </div>
        <div>
            <form action="/newpost" method="get">
                <input type="submit" value="Create New Post">
            </form>
        </div>
   </header> 

   <% if (locals.posts) { %>
        <section class="container">
            <% if (posts.length != 0) { %>
                <% posts.forEach(post => { %>
                    <div class="cards">
                        <div class="tc">
                            <h2><%= post.blogTitle %></h2>
                            <p><%= post.blogCategory %></p>
                        </div>
                        <p id="content"><%= post.blogContent %></p>
                        <p id="author">~by <%= post.blogAuthor %></p>
            
                        <div class="btncontainer">
                            <form action="/editpost/<%= post.id %>" method="get">
                                <input type="submit" value="Edit" class="edit">
                            </form>
        
                            <form action="/delete/<%= post.id %>?_method=DELETE" method="POST">
                                <input type="submit" value="Delete" class="delete">
                            </form>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                    <p id="noPosts">No Posts. Create One.</p>
            <% } %>
   <% } else { %>
            <p id="noPosts">No Posts. Create One.</p>
        <% } %>

   </section>
    
</body>
</html>